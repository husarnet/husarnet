menu "Husarnet"
    choice HUSARNET_LOG_LEVEL
        bool "Default Husarnet log verbosity"
        default HUSARNET_LOG_LEVEL_WARN
        help
            Specify how much output to see in logs by default.

        config HUSARNET_LOG_LEVEL_NONE
            bool "No output"

        config HUSARNET_LOG_LEVEL_ERROR
            bool "Error"
        config HUSARNET_LOG_LEVEL_WARN
            bool "Warning"
        config HUSARNET_LOG_LEVEL_INFO
            bool "Info"
        config HUSARNET_LOG_LEVEL_DEBUG
            bool "Debug"
    endchoice

    # Levels are set according to the "husarnet/logging.h" LogLevel values
    config HUSARNET_LOG_LEVEL
        string
        default "0" if HUSARNET_LOG_LEVEL_NONE
        default "1" if HUSARNET_LOG_LEVEL_ERROR
        default "3" if HUSARNET_LOG_LEVEL_WARN
        default "4" if HUSARNET_LOG_LEVEL_INFO
        default "5" if HUSARNET_LOG_LEVEL_DEBUG
    
    config HUSARNET_FQDN
        string "Husarnet FQDN"
        default "prod.husarnet.com"
        help
            The FQDN of the Husarnet setup server. Can be changed for beta, testing and custom deployments.
    
    config HUSARNET_NGSOCKET_TASK_PRIORITY
        int "NgSocket task priority"
        range 1 17
        default 17
        help
            Sets packet processing task priority. Should be set higher than config, heartbeat and eventbus task priorities.

    config HUSARNET_CONFIG_MANAGER_TASK_PRIORITY
        int "ConfigManager task priority"
        range 1 16
        default 16
        help
            Sets configuration manager task priority. Should be set lower than ngsocket task priority.

    config HUSARNET_EVENTBUS_TASK_PRIORITY
        int "EventBus task priority"
        range 1 15
        default 5
        help
            Sets websocket event bus task priority. Should be set lower than ngsocket and config task priorities.

    config HUSARNET_HEARTBEAT_TASK_PRIORITY
        int "Websetup connection task priority"
        range 1 15
        default 5
        help
            Periodic hearbeat task. Should be set lower than ngsocket and config task priorities.
endmenu
