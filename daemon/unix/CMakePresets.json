{
  "version": 2,
  "configurePresets": [
    {
      "name": "unix",
      "displayName": "Configure preset using toolchain file",
      "description": "Sets Ninja generator, build and install directory",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/../../build/amd64/unix",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/arch_amd64.cmake",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/../../build/amd64/unix/out",
        "BUILD_SHARED_LIBS": "false"
      }
    }
  ]
}
